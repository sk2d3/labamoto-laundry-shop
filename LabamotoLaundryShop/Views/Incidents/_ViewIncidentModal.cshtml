@model LabamotoLaundryShop.Models.Incident

<style>
    .modal-content {
        border-radius: 12px;
    }

    .text-secondary {
        color: #6c757d;
    }

    .border {
        border-color: #dbe2f0 !important;
    }

    h5, h6 {
        letter-spacing: 0.3px;
    }
</style>
<div class="container">

    <!-- Section Title -->
    <h5 class="fw-bold text-primary mb-3">Incident Details</h5>

    <div class="p-3 border rounded mb-3 bg-white">

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Order ID:</div>
            <div class="col-8">#@Model.OrderID</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Customer:</div>
            <div class="col-8">@Model.CustomerName</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Date Reported:</div>
            <div class="col-8">@Model.ReportDate.ToString("MMM d, yyyy")</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Reported By:</div>
            <div class="col-8">@Model.ReportedByStaffID</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Incident Type:</div>
            <div class="col-8">@Model.IncidentType</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Severity:</div>
            <div class="col-8">@Model.Severity</div>
        </div>

        <div class="mt-3">
            <h6 class="fw-bold text-primary">Issue Summary:</h6>
            <p>@Model.IssueSummary</p>
        </div>

        <div class="mt-3">
            <h6 class="fw-bold text-primary">Detailed Description:</h6>
            <p>@Model.Description</p>
        </div>

        <div class="row mt-2">
            <div class="col-4 fw-bold text-secondary">Estimated Value:</div>
            <div class="col-8">₱@Model.EstimatedItemValue</div>
        </div>

    </div>

    <!-- Resolution Section -->
    <h5 class="fw-bold text-success mb-3">✅ Resolution Provided</h5>

    <div class="p-3 border rounded bg-white">

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Resolution:</div>
            <div class="col-8">@Model.Resolution</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Resolved Date:</div>
            <div class="col-8">@(Model.ResolvedDate?.ToString("MMM d, yyyy") ?? "-")</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-bold text-secondary">Resolved By:</div>
            <div class="col-8">@Model.ResolvedByStaffID</div>
        </div>

    </div>

</div>
